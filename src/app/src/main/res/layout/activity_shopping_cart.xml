<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".View.ShoppingCartActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_shopping_cart"/>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/cart_items">

            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <GridLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="3"
                android:background="@drawable/layout_bg_rounded_corner">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:padding="10dp"
                    android:layout_row="0"
                    android:textAllCaps="true"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:text="@string/subtotal_price"
                    android:layout_columnWeight="2"/>
                <TextView
                    android:id="@+id/subtotalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:text="@string/zero_number"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:padding="10dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:textAllCaps="true"
                    android:text="@string/discount"
                    android:layout_columnWeight="2"/>
                <TextView
                    android:id="@+id/discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:text="@string/zero_number"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:padding="10dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:text="@string/total_price"
                    android:layout_columnWeight="2"/>
                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:text="@string/zero_number"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_columnWeight="1"/>
            </GridLayout>
            <Button
                android:id="@+id/check_out_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:text="@string/check_out"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>