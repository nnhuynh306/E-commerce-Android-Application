<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_bg_rounded_corner"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:background="@drawable/layout_bg_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_columnWeight="2"
            android:orientation="horizontal">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/productImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                />
            <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <HorizontalScrollView

                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >
                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:text="@string/lorem"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </HorizontalScrollView>
                <HorizontalScrollView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/total_price"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:paddingLeft="10dp"
                            android:text="0"
                            />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edittext_rounded_border"
            android:orientation="horizontal"
            android:layout_columnWeight="1">
            <ImageButton
                android:id="@+id/decreaseProductQuantity"
                android:layout_width="wrap_content"
                android:src="@drawable/arrow_left_icon_black"
                android:background="@drawable/round_button"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="14sp"
                android:padding="4sp"
                android:background="@android:color/transparent"
                android:hint="@string/quantity_holder"
                android:gravity="center"
                android:id="@+id/productQuantity"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:id="@+id/increaseProductQuantity"
                android:layout_width="wrap_content"
                android:src="@drawable/arrow_right_icon_black"
                android:background="@drawable/round_button"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_marginHorizontal="20dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/delete_icon_red"
                android:background="@drawable/round_button"/>

            <ImageButton
                android:id="@+id/check_button"
                android:layout_marginHorizontal="20dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/check_icon_green"
                android:background="@drawable/round_button"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>