<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_button"
    android:clickable="true"
    android:orientation="vertical"
    android:id="@+id/admin_product_item">


    <LinearLayout
        android:background="@drawable/layout_bg_normal_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/admin_product_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/image_holder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="@string/name"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/admin_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:text="@string/lorem"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="2dp"/>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="@string/category"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/admin_product_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:text="@string/lorem"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="2dp"/>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="In Stock"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/admin_product_quantity"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1000"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="2dp"/>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="@string/price"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/admin_product_price"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="$ 15.00"
                        android:textColor="#42995C"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="2dp"/>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>