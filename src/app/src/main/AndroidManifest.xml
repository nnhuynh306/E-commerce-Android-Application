<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_commerce_app">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.product.ProductActivity"></activity>
        <activity android:name=".view.orderdetail.OrderDetailActivity" />
        <activity android:name=".view.order.OrderActivity" />
        <activity android:name=".view.home.HomeActivity" />
        <activity android:name=".view.favorite.FavoriteActivity" />
        <activity android:name=".view.detail.DetailActivity" />
        <activity android:name=".view.checkout.CheckoutActivity" />
        <activity android:name=".view.cart.CartActivity" />
        <activity android:name=".view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>