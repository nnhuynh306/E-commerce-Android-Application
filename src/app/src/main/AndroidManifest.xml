<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ecommerceapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".InitApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerceApp">

        <activity android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".View.AdminPageActivity">
        </activity>
        <activity android:name=".View.SignUpActivity">
        </activity>
        <activity android:name=".View.LoginActivity">
        </activity>
        <activity android:name=".View.ProductDetailActivity" />
        <activity android:name=".View.ProductListActivity" />

        <activity android:name=".View.ShoppingCartActivity">
        </activity>
        <activity android:name=".View.CheckOutActivity">
        </activity>

        <activity android:name=".View.UserPageActivity">
        </activity>

        <activity android:name=".View.ForgetPassActivity">
        </activity>

    </application>

</manifest>